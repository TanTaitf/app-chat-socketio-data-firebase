<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context="com.media.tf.chatsocketio.ScanQR.ScanQRActivity">

    <com.media.tf.chatsocketio.FontCustom.MyTextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="#df1710"
        android:id="@+id/txt_addressQR"
        app:fontName="myriadpro.ttf"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan QR"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:id="@+id/btn_ScanQr"
        android:paddingLeft="15dp"
        android:drawableLeft="@drawable/qr_code_button"
        />
</LinearLayout>
