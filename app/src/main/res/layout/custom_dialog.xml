<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:padding="2dp"
    android:background="#14bf42">

    <com.media.tf.chatsocketio.FontCustom.MyTextView
        android:layout_marginTop="10dp"
        android:text="Nhập tên để chat ngay nào"
        android:id="@+id/titlehanhdong"
        android:textSize="22sp"
        android:textColor="#ffffff"
        app:fontName="myriadpro.ttf"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_dowload" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:padding="2dp">

            <com.media.tf.chatsocketio.FontCustom.CustomFontButton
                android:id="@+id/btn_chuphinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffffff"
                android:drawableLeft="@drawable/camera_1"
                android:text="Chụp hình"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="italic" />

            <com.media.tf.chatsocketio.FontCustom.CustomFontButton
                android:id="@+id/btn_chonhinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffffff"
                android:drawableLeft="@drawable/thuvien_1"
                android:text="Chọn hình"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="italic" />

        </LinearLayout>


    </LinearLayout>


    <com.media.tf.chatsocketio.FontCustom.CustomFontEditText
        android:id="@+id/edt_nameuser"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:allowUndo="true"
        android:background="#ffffff"
        android:hint="Name user"
        android:padding="5dp"
        android:maxLines="1"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:weightSum="10">

        <com.media.tf.chatsocketio.FontCustom.CustomFontButton
            android:id="@+id/huy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="#bdd1d1"
            android:text="Hủy"
            />

        <com.media.tf.chatsocketio.FontCustom.CustomFontButton
            android:id="@+id/dongy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="#dfdede"
            android:text="Đồng ý" />
    </LinearLayout>

</LinearLayout>